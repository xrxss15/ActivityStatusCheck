<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- CRITICAL: Location permission for Bluetooth device scanning -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- CRITICAL: Bluetooth permissions (API 30 and below) -->
    <uses-permission android:name="android.permission.BLUETOOTH" 
        android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" 
        android:maxSdkVersion="30" />
    
    <!-- CRITICAL: Android 12+ Bluetooth permissions (API 31+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" 
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Tell system this app uses Bluetooth -->
    <uses-feature 
        android:name="android.hardware.bluetooth" 
        android:required="false" />
    
    <queries>
        <package android:name="com.garmin.android.apps.connectmobile" />
        <package android:name="com.garmin.connectiq" />
    </queries>

    <application android:label="Activity Status Companion">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".ActivityStatusCheckReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="net.xrxss15.ACTIVITY_STATUS_CHECK" />
            </intent-filter>
        </receiver>
    </application>
</manifest>