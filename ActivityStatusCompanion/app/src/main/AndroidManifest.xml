<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.xrxss15">

    <!-- ============================================ -->
    <!-- BLUETOOTH PERMISSIONS (Android 12+)          -->
    <!-- ============================================ -->
    <!-- BLUETOOTH_SCAN: Required to discover Garmin devices -->
    <!-- neverForLocation: We don't derive physical location from BLE scans -->
    <uses-permission 
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="s" />
    
    <!-- BLUETOOTH_CONNECT: Required to communicate with paired Garmin devices -->
    <uses-permission 
        android:name="android.permission.BLUETOOTH_CONNECT"
        tools:targetApi="s" />

    <!-- ============================================ -->
    <!-- FOREGROUND SERVICE PERMISSIONS               -->
    <!-- ============================================ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission 
        android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"
        tools:targetApi="upside_down_cake" />

    <!-- ============================================ -->
    <!-- NOTIFICATION PERMISSIONS (Android 13+)       -->
    <!-- ============================================ -->
    <uses-permission 
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="tiramisu" />

    <!-- ============================================ -->
    <!-- BACKGROUND OPERATION PERMISSIONS             -->
    <!-- ============================================ -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- ============================================ -->
    <!-- MINIMUM SDK VERSION                          -->
    <!-- ============================================ -->
    <uses-sdk
        android:minSdkVersion="31"
        android:targetSdkVersion="35" />

    <application
        android:allowBackup="true"
        android:label="Garmin Activity Listener"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Material.Light">

        <!-- ============================================ -->
        <!-- MAIN ACTIVITY                                -->
        <!-- ============================================ -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ============================================ -->
        <!-- SDK RECOVERY ACTIVITY                        -->
        <!-- ============================================ -->
        <activity
            android:name=".SdkInitActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:excludeFromRecents="true"
            android:noHistory="true" />

        <!-- ============================================ -->
        <!-- BROADCAST RECEIVER FOR REMOTE CONTROL        -->
        <!-- ============================================ -->
        <receiver
            android:name=".ActivityStatusCheckReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="net.xrxss15.OPEN_GUI" />
                <action android:name="net.xrxss15.CLOSE_GUI" />
                <action android:name="net.xrxss15.TERMINATE" />
            </intent-filter>
        </receiver>
        
        <!-- ============================================ -->
        <!-- WORKMANAGER FOREGROUND SERVICE               -->
        <!-- ============================================ -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            tools:node="merge" />
        
        <!-- ============================================ -->
        <!-- WORKMANAGER INITIALIZATION PROVIDER          -->
        <!-- ============================================ -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup" />
        </provider>

    </application>

</manifest>